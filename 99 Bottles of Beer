#99 Bottles of beer

import sys, time

#define lyrics
lyrics1 = """ bottles of beer on the wall..
"""
lyrics2 = """ bottles of beer!
"""
lyrics3 = """You take one down, pass it around.
"""
lyrics4 = """ bottles of beer on the wall..
"""
end_song = "no more bottles of beer on the wall, no more bottles of beer. Go to the store, buy me some more, 99 bottles of beer on the wall!"

#Print Slow
typing_speed = 50 #wpm
def slow_type(str):
    for letter in str:
        sys.stdout.write(letter)
        sys.stdout.flush()
        time.sleep(0.1)

#define function, create loop
def song(count):
    while count > 0:
        body1 = str(count), lyrics1
        body2 = str(count), lyrics2
        body3 = lyrics3
        slow_type(body1)
        slow_type(body2)
        slow_type(body3)
        count -= 1
        body_4 = str(count), lyrics4
        slow_type(body_4)
    slow_type(end_song)

#call function

song(99)
